WindowManager:
    current: "main"
    MainWindow:
        id: main
        Panel:
            LogoBtn:
                on_release: root.exit()
            UpdateBtn:
                on_release: root.update_list()
            PlusBtn:
                on_release: root.current = 'form'
        ProfilesScroll:
            id: main_pr
            Profiles:
                id: main_profiles
    ProfileWindow:
        id: profile
        MDIconButton:
            icon: "reply"
            pos_hint: {"top": 1}
            ripple: 0
            on_release:
                root.current = 'main'
#                root.clear_tabs()
        MDSmartTile:
            id: profile_photo
            pos_hint: {'top':0.95, 'center_x': 0.5}
            radius: 15
            box_radius: [15, 15, 15, 15]
            source: root.prof_info['photo']
            size_hint: 0.5, 0.25
        MDTabs:
            pos_hint: {'top':0.68, 'center_x': 0.5}
            id: profile_mdtabs
    CreateProfileForm:
        GoBackBtn:
            on_release: root.current = 'main'
        ImageButton:
            id: form_photo
            source: "static/images/add_photo.jpg"
            size_hint: (0.7,0.2)
            pos_hint: {'top': 0.9, "center_x": 0.5}
            on_release: root.file_manager_open()
        ScrollView:
            size_hint: (0.8, 0.65)
            pos_hint: {'top': 0.65, 'x': 0.1}
            bar_color: (0,0,0,0)
            bar_inactive_color: (0,0,0,0)
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 30
                MDTextField:
                    id: form_name
                    size_hint_y: None
                    hint_text: "Имя"
                    mode: "round"
                    max_text_length: 50
                    helper_text: "Всего символов"
                    on_text: root.prof_info['name'] = self.text
                MDTextField:
                    id: form_surname
                    size_hint_y: None
                    hint_text: "Фамилия"
                    mode: "round"
                    max_text_length: 50
                    helper_text: "Всего символов"
                    on_text: root.prof_info['surname'] = self.text
                MDTextField:
                    id: form_lastname
                    size_hint_y: None
                    hint_text: "Отчество"
                    mode: "round"
                    max_text_length: 50
                    helper_text: "Всего символов"
                    on_text: root.prof_info['lastname'] = self.text
                MDSegmentedButton:
                    id: form_is_working
                    size_hint_y: None
                    size_hint_x: 1
                    selected_color: "#303A29"
                    line_color: "#343930"
                    MDSegmentedButtonItem:
                        text: "Не работает"
                        active: True
                        on_release: root.prof_info['is_working'] = False
                    MDSegmentedButtonItem:
                        text: "Работает"
                        on_release: root.prof_info['is_working'] = True
                GridLayout:
                    rows: 1
                    spacing: 20
                    size_hint_y: 0.8
                    MDTextField:
                        id: form_age
                        hint_text: "Возраст"
                        mode: "round"
                        max_text_length: 3
                        helper_text: "Всего символов"
                        on_text: root.prof_info['age'] = self.text
                    MDTextField:
                        id: form_phone
                        hint_text: "Телефон"
                        mode: "round"
                        max_text_length: 11
                        helper_text: "Всего символов"
                        on_text: root.prof_info['phone'] = self.text
                Widget:
                MDTextField:
                    id: form_position
                    size_hint_y: None
                    hint_text: "Должность"
                    mode: "round"
                    max_text_length: 20
                    helper_text: "Всего символов"
                    on_text: root.prof_info['position'] = self.text
                MDTextField:
                    id: form_job_place
                    size_hint_y: None
                    hint_text: "Место работы"
                    mode: "round"
                    max_text_length: 30
                    helper_text: "Всего символов"
                    on_text: root.prof_info['job_place'] = self.text
                AnchorLayout:
                    size_hint_y: None
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDRectangleFlatButton:
                        pos_hint_x: 0.5
                        text: "Добавить"
                        text_color: 0, 0, 1, 1
                        md_bg_color: 1, 1, 1, 1
                        on_release:
                            root.create_profile()
                            root.current = 'main'


