#Panel widgets
<Panel@StackLayout>
    canvas.before:
        Color:
            rgba: (0, 86/255, 179/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'tb-lr'
    spacing: 3
    size_hint: (0.2, root.size_hint_y)

<PanelBtn@MDIconButton>
    icon_size: "36sp"
    ripple_scale: 2
#    size_hint: (1,0.15)

<LogoBtn@PanelBtn>:
    icon: 'home-export-outline'

<PlusBtn@PanelBtn>:
    icon: 'plus'

<UpdateBtn@PanelBtn>:
    icon: 'reload'

<GoBackBtn@PanelBtn>:
    icon: 'arrow-left'
    pos_hint: {"top": 1}


#Prfofiles panel

<ProfilesScroll@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    pos_hint: {"x": 0.19}

<Profiles@MDList>:
    id: main_profiles
    padding: 10
    spacing: 10
    size_hint: 0.7, None
    height: self.minimum_height


<ProfileBtn@Button>:
    size_hint: (1, 0.3)
    text: 'profile'


<ImageButton@ButtonBehavior+Image>